pipeline {
    agent any

    stages {
        stage('git_checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/akshaybombale/jenkins-cicd.git'
            }
        }
        stage('Build') {
            steps {
            sh 'mvn clean package'
            }
        }
        
        stage('Static Code Analysis') {
            environment {
              SONAR_URL = "http://localhost:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
        stage('Build docker image') {
            steps {
         
             sh 'docker build -t akshayb412/bootimg:${BUILD_NUMBER} .'
          }
        }
        stage('Docker Push') {
            steps {
         
             sh 'docker push akshayb412/bootimg:${BUILD_NUMBER}'
          }
        }
         stage('Update Deployment File') {
                environment {
                    GIT_REPO_NAME = "jenkins-cicd"
                    GIT_USER_NAME = "akshaybombale"
                }
                    
                steps{
                    withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "akshaybombale70@gmail.com"
                    git config user.name "Akshay Bombale"
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" jenkins-cicd/manifestfile/deployment.yaml
                    git add jenkins-cicd/manifestfile/deployment.yaml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
                    
                }
             }
        }
    }
  }


